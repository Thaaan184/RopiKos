<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/header_detail_penyewa"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="7dp"
            android:contentDescription="icon back"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_detail_penyewa_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:text="Detail Penyewa"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:tint="@android:color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_detail_penyewa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_profile"
                        android:layout_toStartOf="@id/iv_whatsapp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_nama_penyewa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Penyewa"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_kamar_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info Kamar" />

                        <TextView
                            android:id="@+id/tv_durasi_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:text="Durasi" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_whatsapp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:tint="@color/green_color"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_whatsapp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Transaksi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ScrollView
                android:id="@+id/transaction_scroll"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="true">

                <LinearLayout
                    android:id="@+id/ll_list_transaksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kartu Identitas (KTP)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/iv_foto_identitas"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:background="#EEEEEE"
                android:src="@drawable/ic_identity_card_placeholder"
                android:contentDescription="Foto Kartu Identitas"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btn_perpanjang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perpanjang Sewa"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_lainnya"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hapus / Opsi Lain"
                android:textColor="@color/primary_color"
                app:strokeColor="@color/primary_color" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>