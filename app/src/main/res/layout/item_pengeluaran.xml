<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_selector">

    <!-- Ikon Pengeluaran (misalnya icon pengeluaran) -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_money"
        android:contentDescription="Icon Pengeluaran"
        app:tint="@color/red_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tv_pengeluaran_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perbaikan Kamar"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pengeluaran_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/10/2025"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pengeluaran_nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 500.000"
        android:textSize="16sp"
        android:textColor="@color/red_color"
        android:layout_gravity="center_vertical" />
</LinearLayout>