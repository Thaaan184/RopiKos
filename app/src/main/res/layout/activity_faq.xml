<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/header_faq"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Sering Ditanyakan"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punya pertanyaan teknis? Hubungi Developer:"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_github_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Patan"
                android:textSize="12sp"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_github_2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Nabil"
                android:textSize="12sp"
                android:backgroundTint="#333333"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_faq"
        android:layout_above="@id/footer_contact"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagaimana cara menambah penyewa baru?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Anda dapat menambah penyewa melalui menu 'Kamar'. Pilih kamar yang statusnya 'Kosong', lalu klik tombol tambah (+) pada kartu kamar tersebut. Atau, tekan tombol tambah (+) di menu 'Penyewa'." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apa fungsi menu Keuangan?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Menu Keuangan mencatat seluruh pemasukan (dari pembayaran sewa) dan pengeluaran (biaya perawatan/listrik) secara otomatis maupun manual. Anda dapat memfilter laporan berdasarkan bulan dan tahun tertentu." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagaimana jika penyewa ingin pindah kamar?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Masuk ke Detail Penyewa, klik tombol opsi (titik tiga) di pojok kanan atas atau tombol 'Lainnya', lalu pilih 'Pindah Kamar'. Pastikan ada kamar lain yang kosong sebelum melakukan pemindahan." />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>